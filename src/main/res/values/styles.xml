<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>

    </style>
    <style name="Splashtext">
        <item name="android:layout_width">211dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="appbtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@drawable/appbtn</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="locationtxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="paddingStart">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="profilelabel1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/gray1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signuplabel1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="listitem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="paddingStart">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="listitem1" parent="listitem">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="iconitem">
        <item name="android:layout_width">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="bestlayouttxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="feedbackedittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
