<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="55dp"
    tools:context=".FeedbackFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/Splashtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:text="Give Application \n Feedback"
            android:textAlignment="textStart"
            android:textSize="30dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/veryhappy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_sentiment_very_satisfied_black_24dp" />

            <ImageView
                android:id="@+id/happy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_sentiment_satisfied_black_24dp" />

            <ImageView
                android:id="@+id/okay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_sentiment_neutral_black_24dp" />

            <ImageView
                android:id="@+id/dissappointed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_sentiment_dissatisfied_black_24dp" />

            <ImageView
                android:id="@+id/absurd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_sentiment_very_dissatisfied_black_24dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/feedbacktxt"
            android:hint="Enter Feedback"
            style="@style/feedbackedittext" />

        <Button
            android:id="@+id/sendfeedback"
            style="@style/appbtn"
            android:text="Send Feedback" />
    </LinearLayout>

</FrameLayout>